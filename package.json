{
  "name": "dy-flyby-proxy",
  "version": "1.0.0",
  "author": "小丁",
  "license": "MIT",
  "description": "https://www.douyu.com/6775193",
  "main": "main.js",
  "scripts": {
    "start": "vite build && electron .",
    "build": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder --win --x64",
    "serve": "cd dist && pnpm dlx http-server --log-ip"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.10",
    "electron-log": "^4.4.8",
    "electron-settings": "^4.0.2",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.2.28",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "electron": "^22.0.2",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.2",
    "sass": "^1.57.1",
    "tailwindcss": "^3.2.4",
    "unplugin-auto-import": "^0.12.1",
    "unplugin-vue-components": "^0.22.12",
    "vite": "^4.0.4"
  },
  "build": {
    "appId": "com.skysway.dyassistant",
    "productName": "617小丁弹幕助手",
    "files": [
      "**/{main.js,preload.js}",
      "entry/",
      "!public/",
      "!src/"
    ],
    "win": {
      "icon": "public/icon.ico",
      "publish": [
        {
          "provider": "generic",
          "url": "http://localhost:8080/",
          "useMultipleRangeRequest": false
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "617小丁弹幕助手 Setup ${version}.${ext}",
      "perMachine": false
    }
  }
}
